#!/bin/sh
text=te
echo '               40     41     42     43     44     45     46     47'

for FGs in \
	'    ' '1;  ' \
	'  30' '1;30' \
	'  31' '1;31' \
	'  32' '1;32' \
	'  33' '1;33' \
	'  34' '1;34' \
	'  35' '1;35' \
	'  36' '1;36' \
	'  37' '1;37'; do
	FG=${FGs// /}
	echo -en " $FGs \e[${FG}m  $text  \e[0m"
	for BG in {40..47}; do
		echo -en " \e[${FG}m\e[${BG}m  $text  \e[0m"
	done
	echo
done
